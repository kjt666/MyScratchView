            app:giftText="特等奖！"
            app:giftTextColor="#f00"
            app:giftTextSize="18sp"
            app:scratchSrc="@mipmap/guaguaka" />
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="图像模式" />

    <com.tf.myscratchview.MyScratchView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:viewType="src" />
